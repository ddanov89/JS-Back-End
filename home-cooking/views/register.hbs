<section class="form-container">
    <h2>Register</h2>
    <form method="post" name="register-form">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" {{#if data.username}}value="{{data.username}}" {{/if}}>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" {{#if data.email}}value="{{data.email}}" {{/if}}>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" {{#if data.password}}value="{{data.password}}" {{/if}}>

        <label for="password">Repeat Password:</label>
        <input type="password" id="re-password" name="repass">

        <button type="submit">Register</button>
    </form>
    <p>Already have an account? <a href="/login">Login here</a>.</p>
</section>