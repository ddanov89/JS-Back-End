<section class="form-container">
    <h2>Create Recipe</h2>
    <form method="post" name="create-form">
        <label for="title">Recipe Title:</label>
        <input type="text" id="title" name="title" {{#if data.title}} value="{{data.title}}" {{/if}}>
        <label for="description">Description:</label>
        <textarea id="description" name="description">{{data.description}}</textarea>
        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{data.title}}</textarea>
        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions">{{data.instructions}} </textarea>
        <label for="image">Image URL:</label><input type="url" id="image" name="image" {{#if data.image}} value="{{data.image}}" {{/if}}>
        <button type="submit">Create Recipe</button>
    </form>
</section>