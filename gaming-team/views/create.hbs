<main id="create">
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method="post" name="create-form">
                <label>Platform:</label>
                <select autocomplete="off" id="platform" name="platform"{{#if data.platform}}value="{{data.platform}}"selected='{{data.platform}}'{{/if}}>
                {{#if data.platform}}
                    <option value="{{data.platform}}" hidden="hidden" selected>{{data.platform}}</option>
                    {{else}}
                    <option value="---" hidden="hidden" selected>---</option>
                    {{/if}}
                    <option value="PC">PC</option>
                    <option value="Nintendo">Nintendo</option>
                    <option value="PS4">PS4</option>
                    <option value="PS5">PS5</option>
                    <option value="XBOX">XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name"{{#if data.name}}value="{{data.name}}" {{/if}}>
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://..."{{#if data.image}}value="{{data.image}}" {{/if}}>
                <label>Price:</label>
                <input type="number" id="price" name="price"{{#if data.price}}value="{{data.price}}" {{/if}}>
                <label>Genre:</label>
                <input type="text" id="genre" name="genre"{{#if data.genre}}value="{{data.genre}}" {{/if}}>
                <label>Description:</label>
                <textarea id="description" name="description">{{#if data.description}}value="{{data.description}}" {{/if}}</textarea>
                <input type="submit" id="btn" value="Create"></input>
            </form>
        </div>
    </section>
</main>