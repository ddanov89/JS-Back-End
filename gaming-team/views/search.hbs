<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" name="search-form" method="get">
            <input type="text" class="search-game" name="name" placeholder="Search here..." {{#if data.name}}value="{{data.name}}" {{/if}}>
            <select autocomplete="off" id="platform" name="platform" {{#if data.platform}}value="{{data.platform}}" selected="{{data.platform}}"{{/if}}>
            {{#if data.platform}}
                <option value="{{data.platform}}" hidden="hidden" selected>{{data.platform}}</option>
                {{else}}
                {{/if}}
                <option value="---">---</option>
                <option value="PC">PC</option>
                <option value="Nintendo">Nintendo</option>
                <option value="PS4">PS4</option>
                <option value="PS5">PS5</option>
                <option value="XBOX">XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        {{#if games}}
        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                {{> game}}
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
    </section>
</main>