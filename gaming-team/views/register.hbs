<main id="register">
    <div class="register-box">
        <h1>Register</h1>
        <h4>It's free and only takes a minute</h4>
        <form method="post">
            <label>Username</label>
            <input type="text" name="username" placeholder="Username.."{{#if data.username}}value="{{data.username}}"{{/if}}>
            <label>Email</label>
            <input type="text" name="email" placeholder="Email.."{{#if data.email}}value="{{data.email}}"{{/if}}>
            <label>Password</label>
            <input type="password" name="password" placeholder="Password.."{{#if data.password}}value="{{data.password}}"{{/if}}>
            <label>Confirm Password</label>
            <input type="password" name="repass" placeholder="Confirm Password..">
            <input type="submit" value="Register">
        </form>
        <p>Already have an account? <a href="/login">Login here</a></p>
    </div>
</main>